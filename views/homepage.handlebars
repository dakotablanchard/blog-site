<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="card mx-auto" style="width: 75rem;">
  <div class="card-body">
    <div class="col-md-5">
      <p>{{post.date_created}}</p>
      <p>{{post.content}}</p>
      <p>Created by: {{post.user.name}}</p>
    </div>
  </div>
</div>
{{/each}}